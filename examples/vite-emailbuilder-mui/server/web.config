<?xml version="1.0" encoding="UTF-8"?>
<!--
  Copy this file to: wwwroot/apps/email-builder/web.config
  
  Structure: Default Web Site > apps > email-builder (folder next to grad-finance-hub)
  Proxies all requests to the Node.js service on port 3010.
  No file copying needed - the Node service serves the app.
-->
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <rule name="ReverseProxyToEmailBuilder" stopProcessing="true">
          <match url="(.*)" />
          <action type="Rewrite" url="http://localhost:3010/apps/email-builder/{R:1}" />
          <serverVariables>
            <set name="HTTP_X_ORIGINAL_HOST" value="{HTTP_HOST}" />
            <set name="HTTP_X_FORWARDED_PROTO" value="https" />
            <set name="HTTP_X_FORWARDED_FOR" value="{REMOTE_ADDR}" />
          </serverVariables>
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
